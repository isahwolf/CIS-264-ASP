@{
    ViewBag.Title = "Customers by State";
}

<div class="row">
    <form asp-action="Index" method="post">
        <label for="state" class="col-sm-2 col-form-label">Choose a state:</label>
        <select name="state" asp-items="@Model.States" class="col-sm-2 col-form-select" onchange="this.form.submit();"></select>
    </form>
</div>

<div class="row">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>Email</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>State</th>
            <th> </th>
        </tr>
        @foreach (var c in Model.Customers)
        {
            <tr>
                <form asp-action="Delete" method="post">
                <td>
                    <a asp-action="Edit" asp-route-customerid="@c.CustomerID" class="text-left">@c.Email</a>
                </td>
                <td class="text-left">@c.LastName</td>
                <td class="text-left">@c.FirstName</td>
                <td class="text-right">@c.State</td>
                <td>
                    <input type="hidden" name="cid" value="@c.CustomerID" />
                    <button type="submit" class="btn btn-danger btn-sm ">Delete</button>
                </td>
                </form>
            </tr>
        }
    </table>
    <a asp-action="Create" class="btn btn-primary">Add New Customer</a>

</div>

