@model List<Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>
<a asp-controller="Movie" asp-action="Add">Add New Movie</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Name</th><th>Year</th><th>Genre</th><th>Rating</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Genre</td>
                <td>@movie.Rating</td>
                <td>
                    <form asp-action="Delete" method="post">
                    <a asp-action="Edit" asp-route-movieid="@movie.MovieId" class="btn btn-warning btn-sm">Edit</a>
                    <input type="hidden" name="mid" value="@movie.MovieId" />
                    <button type="submit" class="btn btn-danger btn-sm ">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
