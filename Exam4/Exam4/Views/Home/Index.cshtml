@model TaskViewModel

@{
    Layout = "";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Task Manager App</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Task Manager</a>
        </nav>
        <div class="row m-1 p-1">
            <div class="col-9">
                <h2>Tasks</h2>
                <div class="row">
                    <form asp-action="Add" class="form-row">
                        <div class="col">
                            <label>Task:</label>
                            <input type="text" name="Description" />
                            <label>Priority:</label>
                            <input type="text" name="Priority" />
                            <button type="submit" class="btn btn-danger btn-sm ">Add Task</button>
                            @if (TempData["message"] != null)
                            {
                                <label class="alert-danger">@TempData["message"]</label>
                            }
                        </div>
                    </form>
                </div>

                <table class="table table-striped table-bordered table-sm">
                    <tr><th>Priority</th><th>Task</th><th>Completed</th><th></th><th></th></tr>
                    @foreach (var t in Model.TaskItems)
                    {
                    <tr>
                        <td class="text-right">@t.Priority</td>
                        <td class="text-right">@t.Description</td>
                        <td class="text-right">@t.Completed</td>
                        <td class="text-center">
                            <form asp-action="Complete" method="post">
                                <input type="hidden" name="id" value="@t.Id" />
                                <button type="submit" class="btn btn-danger btn-sm ">Mark Completed</button>
                            </form>
                        </td>
                    </tr>
                    }
                </table>
                <div class="text-center">
                    <a asp-action="DeleteComplete" class="btn btn-primary">Remove completed tasks</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
