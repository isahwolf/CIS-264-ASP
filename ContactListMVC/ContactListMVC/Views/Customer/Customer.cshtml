@model CustomerViewModel
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>SportsPro Application</title>
</head>
<body class="bg-light p-5 rounded-lg m-3">
    <h1>SportsPro</h1>
    <h2>Sports management software for the sports enthusiast</h2>
    <form asp-action="Customer" method="post" class="form-horizontal">

        <div class="row">
            <div class="col-sm-offset-2 col-sm-2">Select a customer:</div>
            <div class="col-sm-2 ">
                <select name="nam" asp-items="@Model.Name" onchange="this.form.submit()">
                </select>
            </div>
        </div>
    </form>

    @if (Model.Customers.Any())
    {
        var customer = Model.Customers.First();
        <div class="row">
            <div class="col-sm-offset-2 col-sm-2">Address:</div>
            <div class="col-sm-6">
                <input type="text" asp-for="@customer.Address" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-2 col-sm-2">&nbsp;</div>
            <div class="col-sm-6">
                <input type="text" value="@(customer.City + ", " + customer.State)" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-2 col-sm-2">Phone:</div>
            <div class="col-sm-6">
                <input type="text" asp-for="@customer.Phone" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-2 col-sm-2">Email:</div>
            <div class="col-sm-6">
                <input type="text" asp-for="@customer.Email" />
            </div>
        </div>


        <br />

        <div class="row">
            <div class="col-sm-offset-2 col-sm-10">
                <form asp-action="AddToContactList" method="post">
                    <input type="hidden" name="customerID" value="@customer.CustomerID" />
                    <input type="submit" value="Add to Contact List" class="btn btn-primary" />
                </form>
                <a asp-action="DisplayContactList" class="btn btn-primary">Display Contact List</a>
            </div>
        </div>
    }
</body>
</html>