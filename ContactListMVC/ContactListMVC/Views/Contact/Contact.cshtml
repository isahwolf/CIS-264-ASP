@model IEnumerable<Customer>
@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>SportsPro Application</title>
</head>
<body class="bg-light p-5 rounded-lg m-3">

    <h1>SportsPro</h1>
    <h2>Sports management software for the sports enthusiast</h2>

    <div class="row">
        <div class="col-sm-offset-2 col-sm-7">Contact list:</div>
    </div>

    <div class="row">
        <div class="col-sm-offset-2 col-sm-7">
            <select multiple="multiple" size="10" style="width: 500px;">
                @foreach (var customer in Model)
                {
                    <option>@customer.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-offset-2 col-sm-7">
            <a asp-action="customer" class="btn btn-primary">Select Additional Customers</a>
        </div>
    </div>

</body>
</html>