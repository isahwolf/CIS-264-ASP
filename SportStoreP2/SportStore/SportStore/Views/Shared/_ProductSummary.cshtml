@model Product


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            <strong>@Model.Name</strong>
            <span class="badge rounded-pill bg-primary text=white" style="float:right"><small>@Model.Price.ToString("C")</small></span>
        </h4>
        <form asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" name="pid" value="@Model.ProductId" />
            <input type="submit" value="Add to Cart" />
        </form>
        <div class="card-text p-1">@Model.Category : @Model.Description</div>
    </div>
</div>
